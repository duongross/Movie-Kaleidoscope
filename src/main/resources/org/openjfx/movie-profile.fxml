<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.controller.MovieProfileController">
   <children>
      <ImageView fx:id="movieImage" fitHeight="160.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
      <VBox layoutX="200.0" prefHeight="160.0" prefWidth="400.0">
         <children>
            <Label fx:id="nameLabel" prefHeight="40.0" prefWidth="400.0" text="Name (year)" />
            <Label fx:id="directorLabel" prefHeight="40.0" prefWidth="400.0" text="Directors" />
            <Label fx:id="genreLabel" prefHeight="40.0" prefWidth="400.0" text="Genre" />
            <Label fx:id="averageRateLabel" prefHeight="40.0" prefWidth="400.0" text="Average rate" />
         </children>
      </VBox>
      <Label fx:id="descriptionLabel" layoutY="191.0" prefHeight="50.0" prefWidth="600.0" text="Description" />
      <Label layoutY="276.0" prefHeight="50.0" prefWidth="200.0" text="How would you rate this movie ?" />
      <ComboBox fx:id="rateComboBox" layoutX="200.0" layoutY="288.0" prefHeight="26.0" prefWidth="74.0" />
      <Button fx:id="submitRateButton" layoutX="300.0" layoutY="289.0" mnemonicParsing="false" onAction="#submitRateOnAction" text="Save Changes" />
      <Button fx:id="backToHomeButton" layoutX="414.0" layoutY="289.0" mnemonicParsing="false" onAction="#backToHomeOnAction" text="Back to Home" />
   </children>
</AnchorPane>
